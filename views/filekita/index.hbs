<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{title}}</title>
    <script src='https://code.jquery.com/jquery-3.7.0.js'></script>

    <script
      src='https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js'
    ></script>
    <link
      rel='stylesheet'
      href='https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css'
    />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <style>
      body{ padding: 20px; }
    </style>
  </head>
  <body>
    {{message}}
    <br /><br />
    <button class='btn btn-success'><a
        href='filekita/tambah_data' style="text-decoration: none; color: white;"
      >Tambah Data</a></button>
      <br /><br />
    <table id='test' class='display'>
      <thead>
        <tr>
          <td>No</td>
          <td>Nama</td>
          <td>Deskripsi</td>
          <td>Publik</td>
        </tr>
      </thead>

    </table>
    <script>
      $(document).ready(function(){ $('#test').DataTable({
      "ajax":"/filekita/jsondata", "columns":[ {data: null, render:
      function(data, type, row, meta){return meta.row + 1} }, {data: 'nama'},
      {data: 'deskripsi'}, {data: 'isPublik'} ] }) })
    </script>
  </body>
</html>